<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OneActionBar">
        <item name="barTitleSize">22sp</item>
        <item name="barActionBtnTextSize">16sp</item>
    </style>

    <style name="OneActionBar.Normal" parent="OneActionBar">
        <item name="barType">TYPE_NORMAL</item>
    </style>

    <style name="OneActionBar.Normal.White" parent="OneActionBar.Normal">
        <item name="android:background">@android:color/white</item>
        <item name="barTitleColor">@android:color/black</item>
        <item name="barActionBtnColor">@color/one_action_color_blue</item>
    </style>
    <style name="OneActionBar.Normal.Blue" parent="OneActionBar.Normal">
        <item name="android:background">@color/one_action_color_blue</item>
        <item name="barTitleColor">@android:color/white</item>
        <item name="barActionBtnColor">@android:color/white</item>
    </style>

    <style name="OneActionBar.Normal.Green" parent="OneActionBar.Normal">
        <item name="android:background"></item>
        <item name="barTitleColor">@android:color/white</item>
        <item name="barActionBtnColor">@android:color/white</item>
    </style>

    <style name="OneActionBar.Back" parent="OneActionBar.Normal">
        <item name="barType">TYPE_BACK</item>
        <item name="barBackTextSize">14sp</item>
        <item name="barBackText">@string/back_text</item>
    </style>
    <style name="OneActionBar.Back.White" parent="OneActionBar.Back">
        <item name="android:background">@android:color/white</item>
        <item name="barBackColor">@android:color/black</item>
        <item name="barTitleColor">@android:color/black</item>
        <item name="barActionBtnColor">@color/one_action_color_blue</item>
    </style>
    <style name="OneActionBar.Back.Blue" parent="OneActionBar.Back">
        <item name="android:background">@color/one_action_color_blue</item>
        <item name="barBackColor">@android:color/white</item>
        <item name="barTitleColor">@android:color/white</item>
        <item name="barActionBtnColor">@android:color/white</item>
    </style>

    <style name="OneActionBar.Back.Green" parent="OneActionBar.Back">
        <item name="android:background">@color/one_action_color_green</item>
        <item name="barBackColor">@android:color/white</item>
        <item name="barTitleColor">@android:color/white</item>
        <item name="barActionBtnColor">@android:color/white</item>
    </style>

    <style name="OneActionBar.Search" parent="OneActionBar.Normal">
